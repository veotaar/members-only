extends layout

block content
  div.container
    h1= title
    if currentUser.isAdmin
      p Congratulations! You are an admin!
    else
      form(method='POST' action='')
        div
          label(for='password') Enter admin password:
          input#password(type='password', name='password', required='true', minlength='8', maxlength='32')
        button(type='submit') Submit

    if errors
        ul
        for error in errors
          li!= error.msg